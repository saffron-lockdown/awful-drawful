{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:vue/essential"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "plugins": ["vue"],
  "globals": {
    "fabric": "readonly",
    "io": "readonly",
    "Vue": "readonly",
    "gsap": "readonly"
  },
  "rules": {
    "no-await-in-loop": "off"
  }
}
