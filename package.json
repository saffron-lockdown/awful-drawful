{
  "name": "drawful-clone",
  "version": "1.0.0",
  "description": "Clone of Drawful",
  "main": "src/server/index.js",
  "scripts": {
    "dev": "nodemon -r esm -r dotenv/config --watch src/server",
    "client:dev": "vite serve src/client",
    "client:serve": "vite preview src/client",
    "client:build": "vue-tsc --noEmit --project src/client && vite build src/client",
    "lint": "eslint .",
    "test": "npm run test:unit",
    "test:unit": "jest --verbose src",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test:integration": "cypress open",
    "build": "node -r esm ./generateVersion.js && npm run client:build",
    "start": "DEBUG=app* node -r esm src/server"
  },
  "dependencies": {
    "crypto-random-string": "^3.3.0",
    "debug": "^4.2.0",
    "dotenv": "^8.2.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "express-http-proxy": "^1.6.2",
    "express-session": "^1.17.1",
    "nodemon": "^2.0.4",
    "serve-static": "^1.14.1",
    "socket.io": "^2.3.0",
    "source-map-support": "^0.5.19",
    "vue": "^3.0.11"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@vitejs/plugin-vue": "^1.2.2",
    "@vue/compiler-sfc": "^3.0.5",
    "babel-jest": "^26.5.2",
    "cypress": "^5.4.0",
    "eslint": "^7.11.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-vue": "^7.1.0",
    "jest": "^26.5.3",
    "prettier": "^2.1.2",
    "typescript": "^4.1.3",
    "vite": "^2.3.3",
    "vue-tsc": "^0.0.24"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/saffron-lockdown/drawful-clone.git"
  },
  "author": "weizhongtan, tjperr",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/saffron-lockdown/drawful-clone/issues"
  },
  "homepage": "https://github.com/saffron-lockdown/drawful-clone#readme",
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  }
}
